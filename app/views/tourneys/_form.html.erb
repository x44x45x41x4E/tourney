<%= form_for(@tourney) do |f| %>
  <% if @tourney.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tourney.errors.count, "error") %> prohibited this tourney from being saved:</h2>

      <ul>
      <% @tourney.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :title, :class => "form-control", :placeholder => "Amaze them with your Tourney Subject!" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :desc, :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_area :desc, :class => "form-control", :placeholder => "Amaze them even more!" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :tourney_type_id %><br>
    <%= f.text_field :tourney_type_id %>
        <%= f.hidden_field :user_id,:value=> current_user.id %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.datetime_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.datetime_select :end_date %>
  </div>
  <div class="field">
    <%= f.label :venue_id %><br>
    <%= f.text_field :venue_id %>
  </div>
  <div class="field">
    <%= f.label :game_type_id %><br>
    <%= f.collection_select :game_type_id, GameType.all, :id, :name, {:include_blank => false} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
