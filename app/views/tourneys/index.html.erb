<section id="hottest-tourney" class="no-padding">
  <div class="wrapper">
    <div class="container">
      <% @tourneys.each do |tourney| %>
        <%if tourney.tourney_type_id == 2%>
          <div class="row tourney-list-casuals">
        <%else%>
          <div class="row tourney-list-tournaments">
        <%end%>
          <div class="row">
            <div class="col-md-3">
                by: <a href="<%= users_dashboard_path(tourney.user.id)%>"><%= tourney.user.first_name %> <%= tourney.user.last_name %></a><br/>
                <%= time_ago_in_words(tourney.start_date).gsub('about','') + ' ago' %>
            </div>
            <div class="col-md-6">
              <h4><b><%= link_to tourney.title, tourney_path(tourney.id) %></b></h4>
            </div>
            <div class="col-md-3" align='left'>
              <%= tourney.tourney_type.tourney_name%><br>
              Location Here
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</section>

 <h1>Listing tourneys</h1>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Desc</th>
            <th>Tourney type</th>
            <th>Tourney comments</th>
            <th>Start date</th>
            <th>End date</th>
            <th>User</th>
            <th>Venue</th>
            <th>Game type</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @tourneys.each do |tourney| %>
            <tr>
              <td><%= tourney.title %></td>
              <td><%= tourney.desc %></td>
              <td><%= tourney.tourney_type %></td>
              <td><%= tourney.tourney_comments %></td>
              <td><%= tourney.start_date %></td>
              <td><%= tourney.end_date %></td>
              <td><%= tourney.user %></td>
              <td><%# tourney.venue.name %></td>
              <td><%= tourney.game_type %></td>
              <td><%= link_to 'Show', tourney %></td>
              <td><%= link_to 'Edit', edit_tourney_path(tourney) %></td>
              <td><%= link_to 'Destroy', tourney, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
        <%= link_to 'New Tourney', new_tourney_path %>
