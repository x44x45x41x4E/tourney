<h1>Listing messagers</h1>

<table>
  <thead>
    <tr>
      <th>Message type</th>
      <th>User</th>
      <th>Shortcode</th>
      <th>Message</th>
      <th>Message</th>
      <th>Client</th>
      <th>Secret key</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messagers.each do |messager| %>
      <tr>
        <td><%= messager.message_type %></td>
        <td><%= messager.user %></td>
        <td><%= messager.shortcode %></td>
        <td><%= messager.message_id %></td>
        <td><%= messager.message %></td>
        <td><%= messager.client_id %></td>
        <td><%= messager.secret_key %></td>
        <td><%= link_to 'Show', messager %></td>
        <td><%= link_to 'Edit', edit_messager_path(messager) %></td>
        <td><%= link_to 'Destroy', messager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

